import QtQuick 2.0
import Ubuntu.Components 0.1
import Ubuntu.Components.Popups 0.1

Dialog {
    id: root

    property alias inputText: input.text
    signal accepted
    signal rejected

    TextField {
        id: input
        objectName: "inputField"
        focus: true
    }

    Button {
        objectName: "okButton"
        text: i18n.tr("Ok")
        onClicked: {
            accepted()
            PopupUtils.close(root)
        }
    }

    Button {
        objectName: "cancelButton"
        text: i18n.tr("Cancel")
        onClicked: {
            rejected()
            PopupUtils.close(root)
        }
    }
}
